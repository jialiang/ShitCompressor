<UserControl
    x:Class="ShitCompressor.Components.MainGrid.Filename"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <TextBlock
        Padding="0,5"
        VerticalAlignment="Center"
        TextWrapping="Wrap">
        <TextBlock.Inlines>
            <Run Text="{Binding Path=InputInfo.DirectoryName, Mode=OneWay}" />
            <LineBreak />
            <LineBreak />
            <Run FontFamily="../../Fonts/#Roboto Medium" Text="{Binding Path=InputInfo.Name, Mode=OneWay}" />
        </TextBlock.Inlines>
    </TextBlock>
</UserControl>
